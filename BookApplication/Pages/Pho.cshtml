@page
@model BookApplication.Pages.PhoModel
@{
}
<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our Pho </h1>
        <h4>Choose one, or try our Pho</h4>
        <p class="smallText"></p>
    </div>

    <div class="container">
        <div class="col-12 mb-5 mt-5">
            <div class="w-100 row makeYourOwnDiv">
                <div class="col-4">
                    <img src="~/images/Pho/Chef.jpg" class="w-100">
                </div>
                <div class="col-8 align-items-center">
                    <div class="align-middle makeYourOwnText">
                        <h3 style="text-align:left;">Create your own Noodle</h3>
                        <p style="text-align:left;">Make your own Noodle with NoodleMaker!</p>
                        <a class="btn btn-primary" style="float: left" asp-area="" asp-page="Forms/CustomPho">Let's Go!'</a>
                    </div>

                </div>
            </div>
            @foreach (var pho in Model.fakePhoDB)
            {
                var imagePath = "~/images/Pho/" + (pho.ImageTitle + ".jpg");
                <div class="col-4 mb5">
                   
                    <a  asp-area="" asp-page="Checkout/Checkout" asp-route-ImageTitle="@pho.ImageTitle" asp-route-PhoPrice="@pho.FinalPrice">
                        <img src="@imagePath" class="w-100" asp-append-version="true" />
                    </a>
                   
                </div>                  
                        
                 
            }
            
        </div>

    </div>

</div>