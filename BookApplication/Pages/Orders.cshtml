@page
@model BookApplication.Pages.OrdersModel
@{
}

<h3>Orders</h3>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Noodle Name
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model.PhoOrders)
        {
        <tr>
            <td>
                @order.Id
            </td>
            <td>
                @order.PhoName
            </td>
            <td>
                @order.BasePrice
            </td>
        </tr>
        }
    </tbody>
</table>